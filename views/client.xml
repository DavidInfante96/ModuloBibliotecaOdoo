<odoo>
  <data>
  
    <record id="barbershop_client_tree" model="ir.ui.view">
      <field name="name">barbershop.client.tree</field>
      <field name="model">barbershop.client</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="phone"/>    
        </tree>
      </field>
    </record>

    <record id="barbershop_client_form" model="ir.ui.view">
      <field name="name">barbershop.client.form</field>
      <field name="model">barbershop.client</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="group_top">
                    <group name="group_left">
                      <field name="name"/>
                      <field name="phone"/>
                    </group>
                    <group name="group_right">
                    </group>
                </group>
                <group name="group_bop">
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="client_action_window">
      <field name="name">Clientes</field>
      <field name="res_model">barbershop.client</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Cliente
          </p>
          <p>
              Click 'Crear' para a√±adir nuevos elementos.
          </p>
      </field>
    </record>

  </data>
</odoo>