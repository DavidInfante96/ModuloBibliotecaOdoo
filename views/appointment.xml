<odoo>
  <data>
  
    <record id="barbershop_appointment_tree" model="ir.ui.view">
      <field name="name">barbershop.appointment.tree</field>
      <field name="model">barbershop.appointment</field>
      <field name="arch" type="xml">
        <tree>
          <field name="client"/>
          <field name="barber"/>
          <field name="ap_type"/>
          <field name="datetime"/>       
        </tree>
      </field>
    </record>

    <record id="barbershop_appointment_form" model="ir.ui.view">
      <field name="name">barbershop.appointment.form</field>
      <field name="model">barbershop.appointment</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="group_top">
                    <group name="group_left">
                      <field name="client"/>
                      <field name="barber"/>
                      <field name="ap_type"/>
                      <field name="datetime"/>
                    </group>
                    <group name="group_right">
                        productos
                        servicios
                    </group>
                </group>
                <group name="group_bop">
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="appointment_action_window">
      <field name="name">Citas</field>
      <field name="res_model">barbershop.appointment</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Cita
          </p>
          <p>
              Click 'Crear' para a√±adir nuevos elementos.
          </p>
      </field>
    </record>

  </data>
</odoo>